<%- include('partials/header'); -%> 

    <h1>My Posts</h1>
    <%  posts.forEach((post) => {    %> 

    <div class="jumbotron">
        <h2><%=  post.title %></h2><br>
        <p><%= post.content %></p>
        
        <form action="/delete" method="post">
            <br>
            <button class= "btn btn-danger btn-lg" type="submit" name="deletebtn" value="<%= post._id%>">Delete</button>
        </form>
    </div>  
        <% }) %> 
   



